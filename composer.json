{
  "name": "digitalcz/digisign",
  "type": "library",
  "description": "DigiSign PHP library - provides communication with https://api.digisign.org in PHP via PSR-18 HTTP Client",
  "keywords": [
    "digisign",
    "digi-sign",
    "digisign.org",
    "digisign.cz",
    "php"
  ],
  "homepage": "https://www.digisign.cz",
  "license": "MIT",
  "authors": [
    {
      "name": "Digital Solutions s.r.o.",
      "email": "devs@digital.cz",
      "homepage": "https://digital.cz",
      "role": "Developer"
    },
    {
      "name": "Filip Klouƒçek",
      "email": "filip.kloucek@gmail.com",
      "homepage": "https://github.com/fidovo",
      "role": "Developer"
    },
    {
      "name": "Pavel Stejskal",
      "email": "pavel.stejskal@gmail.com",
      "homepage": "https://github.com/spajxo",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "php-http/discovery": "^1.13",
    "php-http/multipart-stream-builder": "^1.1",
    "psr/http-client": "^1.0",
    "psr/http-message": "^1.0.1",
    "psr/simple-cache": "^1.0 || ^3.0"
  },
  "suggest": {
    "symfony/cache": "*",
    "symfony/http-client": "*"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
    "nyholm/nsa": "^1.2.1",
    "nyholm/psr7": "^1.3",
    "php-http/httplug": "^2.1",
    "php-http/mock-client": "^1.3",
    "phpstan/extension-installer": "^1.2.0",
    "phpstan/phpstan": "^1.9.3",
    "phpstan/phpstan-phpunit": "^1.3.2",
    "phpstan/phpstan-strict-rules": "^1.4.4",
    "phpunit/phpunit": "^9.5",
    "slevomat/coding-standard": "^8.7.0",
    "squizlabs/php_codesniffer": "^3.5",
    "symfony/cache": "^6.0",
    "symfony/http-client": "^6.0",
    "symfony/var-dumper": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "DigitalCz\\DigiSign\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DigitalCz\\DigiSign\\": "tests"
    }
  },
  "scripts": {
    "tests": "phpunit",
    "phpstan": "phpstan analyse",
    "cs": "phpcs -p",
    "csfix": "phpcbf -p",
    "checks": [
      "@cs",
      "@phpstan",
      "@tests"
    ]
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "phpstan/extension-installer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
